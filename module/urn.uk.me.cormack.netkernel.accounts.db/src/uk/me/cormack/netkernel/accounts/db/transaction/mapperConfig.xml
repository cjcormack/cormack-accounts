<config>
  <endpoint>
    <grammar>
      <active>
        <identifier>cormackAccounts:db:transaction</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <verbs>EXISTS</verbs>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.me.cormack.netkernel.accounts.db.transaction.TransactionAccessor</argument>
      <varargs/>
    </request>
  </endpoint>

  <endpoint>
    <grammar>
      <active>
        <identifier>cormackAccounts:db:transaction</identifier>
        <argument name="accountId"/>
        <argument name="userId"/>
        <argument name="date"/>
        <argument name="transactionTypeId"/>
        <argument name="description"/>
        <argument name="amount"/>
      </active>
    </grammar>
    <verbs>NEW</verbs>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.me.cormack.netkernel.accounts.db.transaction.TransactionAccessor</argument>
      <varargs/>
    </request>
  </endpoint>
  <endpoint>
    <grammar>
      <active>
        <identifier>cormackAccounts:db:transaction</identifier>
        <argument name="directDebitId"/>
      </active>
    </grammar>
    <verbs>EXISTS,NEW</verbs>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.me.cormack.netkernel.accounts.db.transaction.DirectDebitTransactionAccessor</argument>
      <varargs/>
    </request>
  </endpoint>

  <endpoint>
    <grammar>
      <active>
        <identifier>cormackAccounts:db:transaction</identifier>
        <argument name="id"/>
        <argument name="userId"/>
        <argument name="checked"/>
      </active>
    </grammar>
    <verbs>SINK</verbs>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.me.cormack.netkernel.accounts.db.transaction.TransactionAccessor</argument>
      <varargs/>
    </request>
  </endpoint>

  <endpoint>
    <grammar>
      <active>
        <identifier>cormackAccounts:db:transaction:list</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.me.cormack.netkernel.accounts.db.transaction.ListAccessor</argument>
      <varargs/>
    </request>
  </endpoint>
</config>