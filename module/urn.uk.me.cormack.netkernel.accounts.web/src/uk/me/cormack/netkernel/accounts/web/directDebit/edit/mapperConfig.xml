<config>
  <endpoint>
    <id>cormackAccounts:web:directDebit:edit</id>
    <grammar>
      res:/cormackAccounts/directDebit/
      <group name="id"><regex type="integer"/></group>
      /edit
    </grammar>
    <header name="accountsAutoStyle">true</header>
    <role>User</role>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.me.cormack.netkernel.accounts.web.directDebit.edit.EditDirectDebitAccessor</argument>
      <argument name="id" method="as-string">arg:id</argument>
    </request>
  </endpoint>
  <endpoint>
    <id>cormackAccounts:web:directDebit:doEdit</id>
    <grammar>
      res:/cormackAccounts/directDebit/
      <group name="id"><regex type="integer"/></group>
      /doEdit
    </grammar>
    <role>User</role>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.me.cormack.netkernel.accounts.web.directDebit.edit.DoEditDirectDebitAccessor</argument>
      <argument name="id" method="as-string">arg:id</argument>
    </request>
  </endpoint>

  <endpoint>
    <id>cormackAccounts:web:directDebit:editLink</id>
    <grammar>
      <active>
        <identifier>cormackAccounts:web:directDebit:editLink</identifier>
        <argument name="id"/>
      </active>
    </grammar>
    <request>
      <identifier>active:java</identifier>
      <argument name="class">uk.me.cormack.netkernel.accounts.web.directDebit.edit.EditLinkAccessor</argument>
      <varargs/>
    </request>
  </endpoint>
</config>